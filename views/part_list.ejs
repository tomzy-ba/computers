<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/stylesheets/style.css" />
    </head>
    <body>
        <h1><%= title %></h1>
        <div>
            <% partProps.forEach(prop => { %>
                <div class="maindiv">
                    <a href="/part/<%= prop._id %>"><p id="propname"> <%= prop.name %></p></a>
                    <span class="prop"><%= prop.type %></span>
                    <span class="prop"><%= prop.brand.name %></span>
                    <p class="stars"><%= "⭐".repeat(prop.rating) %></p>
                </div>
            <% }) %>
        </div>
    </body>
</html>

<style>
    .maindiv {
        border: 2px solid grey;
        padding: 0 10px;
    }
    .prop {
        border: 1px solid black;
        margin : 10px;
        padding: 4px;
        border-radius: 5px;
    }
    #propname {
        font-weight: bold;
    }
    .stars {
        font-size: 20px;
        padding: 0;
    }
</style>